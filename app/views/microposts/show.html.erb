<table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <table class="front" summary="For signed-in users">	
        <tr>
        	<td class="gravatar">
    			<%= link_to gravatar_for(@micropost.user), @micropost.user %>
 			 </td>
 			 <td class="micropost">
  				 <span class="user">
     				 <%= link_to @micropost.user.name, @micropost.user %>
   				 </span>
   				 <span class="content">" Said " <%= @micropost.content %></span><br/>
   				 <span class="timestamp">
     				 Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
   				 </span>
			  </td>
 			 <% user = @micropost.user rescue User.find(@micropost.user_id) %>
 			 <% if current_user?(user) %>
 			 <td>
  					<%= link_to "Delete", @micropost, :method => :delete,
									 :confirm => "Are you sure?",
									 :title => @micropost.content %>
 			 </td>
 			 <% end %>
  
  
   
			</tr>
</table>
<table class="front" summary="For signed-in users">	
<h4>Comments</h4>
<% @micropost.comments.each do |comment| %>
<%user = User.find_by_id(comment.user_id) %>
        <tr>
    	<td class="gravatar">
    		    
				
    			<%= link_to gravatar_for(user), user %>
 			 </td>
			 
		<td class="micropost">
  				 <span class="user">
     				 <%= link_to user.name, user %>
   				 </span>
   				 <span class="content">" Said "  <%= comment.body %></span>
   				 <span class="timestamp">
     				 Posted <%= time_ago_in_words(comment.created_at) %> ago.
   				 </span>
	   </td>
	   <td>
	   	 <% user = User.find_by_id(comment.user_id) %>
 			 <% if current_user?(user) %>
			 <% @comment = Comment.find_by_id(comment.id)   %>
	   	
		<%= link_to "edit", edit_comment_path(@comment)%>
  					<%= link_to "Delete", @comment, :method => :delete,
									 :confirm => "Are you sure?",
									 :title => comment.body %>
			<% end %>						 
 			 </td>	     

<% end %>
</tr>
</table>
<table class="front" summary="For signed-in users">	
<tr>

<h2>Add a comment:</h2>
<%= form_for([@micropost, @micropost.comments.build]) do |f| %>
  
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <div class="hidden" style="visibility:hidden;">
    <%= f.label :micropost_id %><br />
    <%= f.text_field :micropost_id %>
  </div>
<% end %>
 
  </tr>


</table>

 </td>
	  
	  
	  
	  
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
		<%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
